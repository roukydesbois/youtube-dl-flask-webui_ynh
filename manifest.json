{
    "name": "Youtube-dl Web UI",
    "id": "youtube-dl-webui",
    "packaging_format": 1,
    "description": {
        "en": "Web interface for Youtube-dl",
        "fr": "Interface web pour Youtube-dl"
    },
    "version": "1.0~ynh1",
    "url": "https://github.com/d0u9/youtube-dl-webui",
    "license": " GPL-2.0-only",
    "maintainer": {
        "name": "Thomas Blarre",
        "email": "thomas@blarre.net",
        "url": "https://thomas.blarre.net"
    },
    "requirements": {
        "yunohost": ">= 3.5"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Youtube-dl Web UI",
                    "fr": "Choisissez un nom de domaine pour Youtube-dl Web UI"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Youtube-dl Web UI",
                    "fr": "Choisissez un chemin pour Youtube-dl Web UI"
                },
                "example": "/youtube-dl",
                "default": "/youtube-dl"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": false
            },
            {
                "name": "dl_dir",
                "type": "string",
                "ask": {
                    "en": "Choose a path on the server to save downloaded videos",
                    "fr": "Choisissez un dossier sur le serveur où seront sauvegardées les vidéos"
                },
                "default": "/home/yunohost.multimedia/shared/Videos"
            }
        ]
    }
}
